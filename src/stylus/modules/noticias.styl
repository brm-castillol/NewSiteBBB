div.cont-ipad
	background url('../images/fondos/img-fondos-noticias.png')
	display block
	height 670px
	background-repeat no-repeat
	position relative

.noticias
	overflow-y scroll
	padding-right 2px
	width 100%
	height 418px

.contenedor-noticias
	border 4px solid $Negro
	background-color $GrisC
	height 473px
	left 12%
	overflow hidden
	position absolute
	top 51px
	width 66%

.cont-top-noticias
	background-color $Gris
	height 28px

ul.circulos-top
	margin 0
	padding 6px 6px 0

ul.circulos-top li
	float left
	list-style none
	margin-right 2px

.circulos-rellenos
	background $Negro
	border 1px solid $Negro
	border-radius 100%
	height 12px
	width 12px

.circulos
	border 1px solid $Negro
	border-radius 100%
	height 12px
	width 12px
	
.cont-c-noticias
	float right
	margin-right 6px
	
.icono-wifi, p.c-noticias 
	float left
	margin-left 4px

.contedor-fecha
	height 74px
	padding 30px 0 0 20px

.fecha-noticia
	font-size 3rem

.contenedor-flechaP
	position absolute
	top 38%

.contenedor-flechaN
	position absolute
	top 38%

.titulo-noticia
	margin-left 20px

.texto-noticia
	margin 0 20px



